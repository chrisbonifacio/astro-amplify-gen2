---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <script>
      // src/layouts/Layout.astro
      import { Amplify } from "aws-amplify";
      import config from "../../amplifyconfiguration.json";

      Amplify.configure(config, { ssr: true });

      console.log({
        config: Amplify.getConfig(),
      });
    </script>
    <slot />
  </body>
</html>
<style is:global>
  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  :root {
    --accent: 136, 58, 234;
    --accent-light: 224, 204, 250;
    --accent-dark: 49, 10, 101;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      rgb(var(--accent-light)) 30%,
      white 60%
    );
  }

  html {
    font-family: system-ui, sans-serif;
    background: #000;
    background-size: 224px;
    height: 100%;
    width: 100%;
  }

  body {
    width: 100%;
    height: 100%;
    padding: 1em;
  }

  code {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }

  .container {
    display: flex;
    height: 100%;
    flex-direction: column;
  }

  button {
    padding: 1rem 2rem;
    background-color: #fff;
    color: #000;
    border: 2px solid #fff;
    border-radius: 4px;
    cursor: pointer;
    font-weight: 500;
    transition: all ease-in-out 300ms;
  }

  button:hover {
    color: #fff;
    background-color: #000;
    border: 2px solid #fff;
  }

  form {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 350px;
    margin: auto auto;
    gap: 1rem;
  }

  form input {
    padding: 1rem;
    border: 1px solid #ddd;
    border-radius: 4px;
    outline: none;
    width: 100%; /* Adjust width as needed */
    background-color: #000;
    color: #fff;
  }

  form select {
    -webkit-appearance: none;
    appearance: none;
    padding: 1rem;
    border: 1px solid #ddd;
    border-radius: 4px;
    outline: none;
    width: 100%; /* Adjust width as needed */
    background-color: #000;
    color: #fff;
  }

  .select-wrapper {
    width: 100%;
    position: relative;
  }

  .select-wrapper::after {
    pointer-events: none;
    content: "â–¼";
    font-size: 1rem;
    top: 12px;
    right: 10px;
    position: absolute;
  }

  form h2 {
    font-size: 2em;
    color: #fff;
    margin-top: 0px;
    margin-bottom: 0px;
  }

  form button:hover {
    color: #fff;
    background-color: #000;
    border: 2px solid #fff;
  }

  #sign-up-button,
  #sign-in-button,
  #sign-out-button {
    flex-direction: row;
    align-self: flex-end;
  }

  .todo-card {
    border: 1px solid #fff;
    border-radius: 4px;
    padding: 1em;
  }

  .complete-todo-button {
    margin-top: 1em;
    width: 100%;
  }
</style>
